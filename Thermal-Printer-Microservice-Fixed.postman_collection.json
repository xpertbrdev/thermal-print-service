	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Gerar sessionId autom√°tico se n√£o existir",
					"if (!pm.collectionVariables.get('sessionId')) {",
					"    const now = new Date();",
					"    const date = now.toISOString().slice(0,10).replace(/-/g,'');",
					"    const time = now.toTimeString().slice(0,8).replace(/:/g,'');",
					"    const random = Math.random().toString(16).substr(2,8).toUpperCase();",
					"    const sessionId = `sess_${date}_${time}_${random}`;",
					"    pm.collectionVariables.set('sessionId', sessionId);",
					"    console.log('Generated sessionId:', sessionId);",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Capturar sessionId das respostas",
					"if (pm.response.json() && pm.response.json().sessionId) {",
					"    pm.collectionVariables.set('sessionId', pm.response.json().sessionId);",
					"    console.log('Captured sessionId:', pm.response.json().sessionId);",
					"}",
					"",
					"// Log da resposta para debug",
					"if (pm.response.code !== 200 && pm.response.code !== 201 && pm.response.code !== 202) {",
					"    console.log('Response Status:', pm.response.code);",
					"    console.log('Response Body:', pm.response.text());",
					"}"
				]
			}
		}
