{
  "description": "Exemplos de configuração com as novas propriedades charPerLine e width",
  "examples": [
    {
      "name": "Configuração Múltiplas Impressoras",
      "description": "Restaurante com impressoras de diferentes tamanhos",
      "payload": {
        "printers": [
          {
            "id": "cozinha-80mm",
            "name": "Impressora Cozinha 80mm",
            "type": "epson",
            "connectionType": "network",
            "address": "192.168.1.101",
            "charPerLine": 48,
            "width": 80,
            "characterSet": "PC852_LATIN2",
            "timeout": 5000
          },
          {
            "id": "balcao-58mm", 
            "name": "Impressora Balcão 58mm",
            "type": "star",
            "connectionType": "network",
            "address": "192.168.1.102",
            "charPerLine": 32,
            "width": 58,
            "characterSet": "PC850_MULTILINGUAL",
            "timeout": 5000
          },
          {
            "id": "delivery-112mm",
            "name": "Impressora Delivery 112mm",
            "type": "brother",
            "connectionType": "usb",
            "address": "/dev/usb/lp0",
            "charPerLine": 80,
            "width": 112,
            "characterSet": "PC437_USA",
            "timeout": 8000
          }
        ],
        "defaultSettings": {
          "charPerLine": 48,
          "width": 80,
          "characterSet": "PC852_LATIN2",
          "timeout": 5000,
          "margins": {
            "top": 0,
            "bottom": 0,
            "left": 0,
            "right": 0
          },
          "spacing": {
            "lineHeight": 1,
            "paragraphSpacing": 1
          }
        }
      }
    },
